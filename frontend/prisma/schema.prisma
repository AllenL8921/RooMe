generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


// npx prisma db push 
// Creates EMPTY tables based on schemas

// define schemas

model Listing {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  interestPool String[] // text[] in PostgreSQL
  price        Int
  image_url    String?
  location     String?
  category     String?
  is_active    Boolean
  is_featured  Boolean
  createdAt    DateTime @default(now())
}
